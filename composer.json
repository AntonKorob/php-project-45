    "description": "Brain Games Project",
    "require": {
        "wp-cli/php-cli-tools": "^0.12.4"
    },
    "autoload": {
        "files": [
            "src/Cli.php",
            "src/Engine.php",
            "src/Game/Calc.php"
        ]
    },

    "[php]": {
    "editor.defaultFormatter": 
        "wongjn.php-sniffer"
    },
    "bin":[
