            "bin/brain-calc",
            "bin/brain-gcd",
            "bin/brain-progression",
            "bin/brain-prime"
        ],
    "require-dev": {
    "squizlabs/php_codesniffer": "^2.2.0"
        },
    "scripts": {
        "phpcs": "phpcs"
    }
}
